%p= @message

%p
  %strong When:
  = @game.starts_at.strftime(GamesHelper::DATE_FORMAT)
  %br
  %strong Where:
  = @game.location

%p#links
  = link_to 'Count me in', respond_game_url(@game, access_token: @player.access_token, playing: 'yes').html_safe, class: 'btn btn-primary'
  = link_to 'Count me out', respond_game_url(@game, access_token: @player.access_token, playing: 'no').html_safe, class: 'btn'
