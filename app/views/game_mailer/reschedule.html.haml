= simple_format(@body)

%p
  %strong When:
  = @game.date
  %br
  %strong Where:
  = link_to @location.name, @location.url

%p
  = link_to @confirmation, respond_game_url(@game, access_token: @player.access_token, playing: 'yes'), class: 'acceptance'
  |
  = link_to @rejection, respond_game_url(@game, access_token: @player.access_token, playing: 'no'), class: 'declination'
  |
  = link_to 'Show me who's playing', game_url(@game, access_token: @player.access_token), class: 'postponement'
