.row
  .col-12.col-lg-8
    = render ValidationErrorsComponent.new(model: quip)

= form_for quip, class: 'form-horizontal' do |f|
  .form-group.row
    = f.label :player_name, 'Submitted By', class: 'col-form-label col-12 col-md-2'
    .col-12.col-md-10.col-lg-6
      = f.text_field :player_name, readonly: true, class: 'form-control-plaintext'

  .form-group.row
    = f.label :confirmation, class: 'col-form-label col-12 col-md-2'
    .col-12.col-md-10.col-lg-6
      = f.text_field :confirmation, class: 'form-control'

  .form-group.row
    = f.label :rejection, class: 'col-form-label col-12 col-md-2'
    .col-12.col-md-10.col-lg-6
      = f.text_field :rejection, class: 'form-control'

  - if authorizer.admin? && quip.persisted?
    .form-group.row
      .col-12.offset-md-2.col-md-10
        .form-check
          = f.check_box :approved, class: 'form-check-input'
          = f.label :approved, class: 'form-check-label'

  .form-group.row
    .col-12.offset-md-2.col-md-10
      = f.submit class: 'btn btn-primary'
      = link_to 'Go Back', quips_path, class: 'btn btn-link'
