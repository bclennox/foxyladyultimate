= form_for quip do |f|
  .row.mb-3
    = f.label :confirmation, class: 'col-form-label col-12 col-md-2'
    .col-12.col-md-6.col-lg-4
      = f.text_field :confirmation, class: 'form-control'

  .row.mb-3
    = f.label :rejection, class: 'col-form-label col-12 col-md-2'
    .col-12.col-md-6.col-lg-4
      = f.text_field :rejection, class: 'form-control'

  .row.mb-3
    .col-12.offset-md-2.col-md-10
      .form-check
        = f.check_box :active, class: 'form-check-input'
        = f.label :active, class: 'form-check-label'

  .row
    .col-12.offset-md-2.col-md-10
      = f.submit class: 'btn btn-primary'
      = link_to 'Go Back', quips_path, class: 'btn btn-link'
