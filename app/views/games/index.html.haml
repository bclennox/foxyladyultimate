- title 'Games'

.page-header
  %h1 Games
  - if admin?
    = render 'actions'

%p.lead= Schedule.instance

%table.table.table-striped.games
  %thead
    %tr
      %th.date Date
      %th.location Location
      %th.players Who’s Coming
  %tbody
    - @games.each do |game|
      %tr{class: game.canceled? ? 'canceled' : 'active'}
        %td.name= link_to(game.canceled? ? "#{game_date(game)} (canceled)" : game_date(game), game)
        %td.location= game.location
        %td.players= game.canceled? ? '—' : pluralize(game.confirmed_players.count, 'player')
