.page-header
  %h1 Games

%table.table.table-striped
  %thead
    %tr
      %th Date
      %th Location
      %th Count
      %th
  %tbody
    - @games.each do |game|
      %tr
        %td= game.starts_at
        %td= game.location
        %td
        %td
          = link_to 'Edit', edit_game_path(game), :class => 'btn btn-mini'
          = link_to 'Delete', game_path(game), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-mini btn-danger'
