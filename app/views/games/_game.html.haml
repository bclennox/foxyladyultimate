.game-details
  %dl
    %dt When
    %dd= game_date(@game)
    %dd.muted= relative_date(@game.starts_at)

    %dt Where
    %dd= @game.location

    %dt= @game.upcoming? ? "Who’s Playing" : "Who Played"
    %dd= game_players(@game, true)

    %dt= @game.upcoming? ? "Who’s Definitely Not Playing" : "Who Declined"
    %dd= game_players(@game, false)

- if admin?
  .form-actions
    = link_to 'Edit', edit_game_path(@game), :class => 'btn'
