= form_for @game, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :location, :class => 'control-label'
    .controls
      = f.text_field :location, :class => 'text_field'
  .control-group
    = f.label :starts_at, :class => 'control-label'
    .controls
      = f.datetime_select :starts_at, :class => 'datetime_select'
  .control-group
    = f.label :canceled, :class => 'control-label'
    .controls
      = f.check_box :canceled, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), games_path, :class => 'btn'
