= form_for @game, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :location, :class => 'control-label'
    .controls
      = f.text_field :location, :class => 'text_field'
  .form-group
    = f.label :starts_at, :class => 'control-label'
    .controls
      = f.datetime_select :starts_at, {}, :class => 'datetime_select input-small'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to 'Go Back', (@game.new_record? ? games_path : @game), :class => 'btn btn-default'
