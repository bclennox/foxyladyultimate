.modal.fade(id=id)
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title= title

      = form_tag url do
        .modal-body
          = yield

        .modal-footer
          = button_tag 'Close', type: 'button', class: 'btn btn-link', data: { bs_dismiss: 'modal' }
          = submit_tag button, class: 'btn btn-primary'
