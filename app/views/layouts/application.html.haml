!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    %meta(name="apple-mobile-web-app-capable" content="yes")
    %meta(name="apple-mobile-web-app-status-bar-style" content="black")
    %link{rel: "icon", href: asset_path("icon.svg"), type: "image/svg+xml"}
    %link{rel: "icon", href: asset_path("icon.png"), type: "image/png"}
    %link{rel: "apple-touch-icon", href: asset_path("icon.png")}
    %link{rel: "manifest", href: manifest_path}
    = csrf_meta_tags
    - if user_signed_in?
      %meta(name="vapid-public-key" content="#{Rails.application.credentials.vapid.public_key}")

    %title= layout.full_page_title

    = stylesheet_link_tag 'application', 'data-turbo-track': 'reload'
    = javascript_importmap_tags

  %body{class: layout.body_class}
    %nav.navbar.navbar-expand-lg.bg-dark.fixed-top(data-bs-theme="dark")
      .container
        = link_to 'Foxy Lady Ultimate', root_path, class: 'navbar-brand'

        %button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbar-main" aria-controls="navbar-main" aria-expanded="false" aria-label="Toggle navigation")
          %span.navbar-toggler-icon

        .collapse.navbar-collapse#navbar-main
          %ul.navbar-nav.me-auto
            = layout.nav_link 'Games', games_path
            = layout.nav_link 'Players', players_path
            = layout.nav_link 'Quips', quips_path if authorizer.admin?

          %ul.navbar-nav.ms-auto
            - if user_signed_in?
              %li.nav-item.dropdown
                %a.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false")
                  = current_user.first_name
                %ul.dropdown-menu.dropdown-menu-end
                  %li= link_to 'Edit Profile', edit_profile_path, class: 'dropdown-item'
                  %li= link_to 'Change Password', edit_password_path, class: 'dropdown-item'
                  %li= link_to 'Sign Out', destroy_user_session_path, class: 'dropdown-item', data: { turbo_method: :delete }
            - else
              = layout.nav_link 'Sign In', new_user_session_path

    .container
      = layout.flash_messages
      = yield
