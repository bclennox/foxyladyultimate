!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = csrf_meta_tags

    %title= layout.page_title

    = stylesheet_link_tag 'application'

    /[if lt IE 9]
      = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js'
    = javascript_include_tag '//www.google.com/jsapi', 'chartkick'
    = javascript_include_tag 'application'

  %body{class: layout.body_class}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Foxy Lady Ultimate', root_path, class: 'brand'
          .nav-collapse
            %ul.nav
              %li= link_to 'Games', games_path
              %li= link_to 'Players', players_path

            %ul.nav.pull-right
              - if user_signed_in?
                %li= link_to 'Change Your Password', edit_user_registration_path
                %li= link_to "Sign Out #{current_user.first_name}", destroy_user_session_path, method: :delete
              - else
                %li= link_to 'Sign In', new_user_session_path

    .container
      .row
        .span12
          = bootstrap_flash
          = yield
