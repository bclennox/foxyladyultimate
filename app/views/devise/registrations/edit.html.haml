- layout.page_title = 'Change Your Password'

.page-header
  %h1 Change Your Password

= form_for(resource, as: resource_name, url: user_registration_path, html: { class: 'form-horizontal', method: :patch }) do |f|
  = devise_error_messages!

  .form-group
    = f.label :current_password, class: 'col-md-3 control-label'
    .col-md-4
      = f.password_field :current_password, autofocus: true, autocomplete: 'off', class: 'form-control'

  .form-group
    = f.label :password, class: 'col-md-3 control-label'
    .col-md-4
      = f.password_field :password, class: 'form-control'

  .form-group
    = f.label :password_confirmation, 'Confirm Password', class: 'col-md-3 control-label'
    .col-md-4
      = f.password_field :password_confirmation, class: 'form-control'

  .form-group
    .col-md-4.col-md-offset-3
      = f.submit 'Change Password', class: 'btn btn-primary'
      = link_to 'Go Back', root_url, class: 'btn btn-default'
